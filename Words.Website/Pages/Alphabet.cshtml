@page "/alphabet/{letter}"
@using Application.Services.MultiLanguage
@using Words.Website.Resources
@using Words.Website.Pages.Shared.Partials
@model Words.Website.Pages.AlphabetModel
@{
    ViewData["Title"] = $"{Localizer["words-starting-with"]} {Model.Letter}";
}

@inject Microsoft.Extensions.Localization.IStringLocalizer<Messages> Localizer
@inject ILanguageService LanguageService

@await Html.PartialAsync("Partials/_SearchFormWithAlphabet", new SearchFormWithAlphabetModel {
    ShowAlphabet = true,
    ShowTagline = false,
    Letters = Model.Letters
})

<!-- main-content -->
<section class="exsh">

    <div class="container">

        <div class="row midbar">

            <h1>@Model.Letter</h1>

            @if (Model.Count > 0)
            {
                <h5>Words starting with '@Model.Letter.ToUpperInvariant()': @Model.Count</h5>
            }
            else
            {
                <h5>No words starting with '@Model.Letter.ToUpperInvariant()' yet. <a href="/submit-word">Want to add one?</a></h5>
            }

            @if (Model.Words != null && Model.Words.Length > 0)
            {
                <p>Click on any word you want to learn more about.</p>

                <ul class="exsh-wd">
                    @foreach (var word in Model.Words)
                    {
                        <a title="@(word.Definitions?.FirstOrDefault()?.Content ?? "")" class="word intonation" href="/entries/@word.Word">
                            <li>@word.Word</li>
                        </a>
                    }
                </ul>
            }
        </div>

    </div>

</section>
