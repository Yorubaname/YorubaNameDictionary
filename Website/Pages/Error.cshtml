@page "/Error/{code:int}"
@model ErrorModel
@{
    ViewData["Title"] = "We hit a bump";
    int statusCode = RouteData.Values["code"] != null ? int.Parse(RouteData.Values["code"]!.ToString()!) : 500;
}

@using Website.Resources
@inject Microsoft.Extensions.Localization.IStringLocalizer<Messages> Localizer

@if (statusCode == 404)
{
    @await Html.PartialAsync("Partials/_NotFound")
}
else
{
    @await Html.PartialAsync("Partials/_SystemError")
}
