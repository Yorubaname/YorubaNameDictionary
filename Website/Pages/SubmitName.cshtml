@page "/submitname"
@model Website.Pages.SubmitNameModel
@{
    ViewData["Title"] = "Submit Name";
}

@using Application.Services.MultiLanguage
@using Website.Resources
@inject Microsoft.Extensions.Localization.IStringLocalizer<Messages> Localizer
@inject ILanguageService LanguageService

@await Html.PartialAsync("Partials/_MiniSearchForm")

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                
                <div class="text-center mb-5">
                    <h2 class="fw-bold">@Localizer["submitname.heading"]</h2>
                    <p class="text-muted">Contribute to the largest dictionary of Yorùbá names.</p>
                </div>

                <div id="error-msg" class="alert alert-danger d-none shadow-sm border-0" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @Localizer["submitname.nameexists"].
                    <a id="view-entry" class="alert-link fw-bold text-decoration-underline" style="cursor: pointer;">
                        @Localizer["submitname.viewentry"]
                    </a>
                </div>

                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4 p-md-5">
                        
                        <form id="suggest-form">
                            <div class="response"></div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    @Localizer["submitname.entername"] <span class="text-danger">*</span>
                                </label>
                                
                                <div class="input-group input-group-lg">
                                    <input type="text" class="form-control" id="miniKeyboard" name="name"
                                           placeholder="@Localizer["submitname.enternameplch"]" 
                                           value="@Model.MissingName" required>
                                </div>
                                
                                @if (LanguageService.IsYoruba)
                                {
                                    <div class="form-text text-muted mt-2">
                                        <i class="bi bi-keyboard"></i> @Localizer["entry-not-found.minikeyb-text"]
                                    </div>
                                }
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    @Localizer["submitname.entermeaning"]: <span class="text-danger">*</span>
                                </label>
                                <textarea name="suggestedMeaning" id="suggestedMeaning" class="form-control" 
                                          rows="4" required></textarea>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    @Localizer["submitname.enterlocation"]:
                                </label>
                                
                                <div class="legacy-select-container">
                                    <select name="suggestedGeoLocation" id="suggestedGeoLocation" multiple="multiple" style="width: 100%;">
                                        @foreach (var geoLocation in Model.GeoLocations)
                                        {
                                            <option value="@geoLocation.Region.@geoLocation.Place">@geoLocation.Place</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-text text-muted">Select all regions that apply.</div>
                            </div>
                            
                            <div class="mb-5">
                                <label class="form-label fw-bold">
                                    @Localizer["submitname.enteremail"]: <span class="text-danger">*</span>
                                </label>
                                <input type="email" name="suggestedEmail" class="form-control form-control-lg" 
                                       id="suggestedEmail" placeholder="name@example.com" required>
                            </div>

                            <div class="d-grid">
                                <button type="submit" id="submit-name" class="btn btn-cta-gold btn-lg py-3 fw-bold">
                                    SUBMIT NEW NAME
                                </button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>