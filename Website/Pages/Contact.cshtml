@page "/contact-us"
@using Application.Services.MultiLanguage
@using Website.Resources
@model Website.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

@inject Microsoft.Extensions.Localization.IStringLocalizer<Messages> Localizer
@inject ILanguageService LanguageService

@await Html.PartialAsync("Partials/_SearchForm", Model.NameCount);

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                    
                    <div class="card-header bg-dark text-white p-4 text-center">
                        <h3 class="mb-0 fw-bold">@Localizer["contact-info"]</h3>
                    </div>

                    <div class="card-body p-5 text-center">
                        
                        <p class="lead text-muted mb-4">
                            @Localizer["contact-info-preamble"]
                        </p>
                        
                        <hr class="my-4 opacity-25">

                        <div class="mb-4">
                            <div class="mb-2">
                                <i class="bi bi-envelope-fill text-warning fs-3"></i>
                            </div>
                            <p class="mb-1 fw-bold">@Localizer["contact-info-email-preamble"]</p>
                            <a href="mailto:project@yorubaname.com" class="fs-5 text-decoration-none text-dark fw-bold hover-gold">
                                project@yorubaname.com
                            </a>
                        </div>

                        <hr class="my-4 opacity-25">

                        <div class="mb-4">
                            <div class="mb-2">
                                <i class="bi bi-geo-alt-fill text-warning fs-3"></i>
                            </div>
                            <h5 class="fw-bold">@Localizer["contact-info-contact-preamble", LanguageService.Website]</h5>
                            <p class="text-muted">
                                2nd Floor, The Garnet Building<br>
                                Lekki - Epe Express Road, Lekki<br>
                                Lagos 101245, Nigeria
                            </p>
                        </div>

                        <div class="mt-5">
                            <p class="lead fw-bold mb-3">@Localizer["social-media"]</p>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="https://facebook.com/YorubaNames" target="_blank" class="btn btn-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 50px; height: 50px; background-color: #3b5998; border: none;">
                                    <i class="bi bi-facebook fs-4"></i>
                                </a>
                                <a href="https://twitter.com/YorubaNames" target="_blank" class="btn btn-info text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 50px; height: 50px; background-color: #1DA1F2; border: none;">
                                    <i class="bi bi-twitter fs-4"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>