@page
@using Application.Services.MultiLanguage
@using Website.Resources
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@inject Microsoft.Extensions.Localization.IStringLocalizer<Messages> Localizer
@inject ILanguageService LanguageService

    <section class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold mb-4">@Localizer["jumbotron1"] @Localizer["jumbotron2", Model.NameCount, LanguageService.LanguageDisplay]</h1>

            <form class="search-input-group" role="search" action="/entries" method="GET">
                <input type="text" class="form-control" id="keyboard" name="q" placeholder="@Localizer["search-plchol", LanguageService.LanguageDisplay]" autocomplete="off">
                <button class="btn btn-search" type="submit"><i class="bi bi-search"></i></button>
            </form>

            <div class="mb-5">
                <a href="/submitname" class="btn-submit-hero">
                    <i class="bi bi-plus-circle-fill"></i> @Localizer["submit-name"]
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    @if (LanguageService.IsYoruba)
                    {
                        <div class="text-white-50 fst-italic">
                            @Localizer["oni-message"] <br>
                            <span class="text-white fw-bold mt-2 d-inline-block">— Ọọ̀ni Adéyẹyè Ẹniìtàn Ògúnwùsì</span> <small>(Ọ̀jájá II, Ọọ̀ni of Ifẹ̀ Kingdom)</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <div class="container my-5" style="margin-top: -50px; position: relative; z-index: 10;">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="custom-card">
                    <div class="list-title"><i class="bi bi-clock me-2"></i> @Localizer["latest-search"]</div>
                    <ul class="recent-list">
                        @foreach (var search in Model.LatestSearches)
                        {
                            <li><a href="/entries/@search">@search</a></li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="custom-card">
                    <div class="list-title"><i class="bi bi-plus-square me-2"></i> @Localizer["latest-add"]</div>
                    <ul class="recent-list">
                         @foreach (var addition in Model.LatestAdditions)
                        {
                            <li><a href="/entries/@addition">@addition</a></li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="custom-card">
                    <div class="list-title"><i class="bi bi-fire me-2"></i> @Localizer["most-popular"]</div>
                    <ul class="recent-list">
                        @foreach (var popular in Model.MostPopular)
                        {
                            <li><a href="/entries/@popular">@popular</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <div class="text-center">
            <h6 class="text-uppercase fw-bold text-muted mb-3 tracking-wide">@Localizer["name-listed-by-alphabets"]</h6>
            <div class="alpha-grid">
                 @foreach (var letter in Model.Letters)
                {
                    <a href="/alphabet/@letter.ToLower()" class="alpha-item">@letter</a>
                }
            </div>
        </div>
    </div>