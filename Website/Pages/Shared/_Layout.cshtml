@using Application.Services.MultiLanguage
@using Website.Resources

@inject Microsoft.Extensions.Localization.IStringLocalizer<Messages> Localizer
@inject ILanguageService LanguageService

@{
    string smallLogoUrl = "";
    string logoUrl = "";

    if (LanguageService.IsYoruba)
    {
        smallLogoUrl = $"{ViewData["BaseURL"]}/img/yn-logo-drum-only.png";
        logoUrl = $"{ViewData["BaseURL"]}/img/yn-logo-brown-black.png";
    }
    else if (LanguageService.IsIgbo)
    {
        smallLogoUrl = logoUrl = $"{ViewData["BaseURL"]}/img/igboname-logo.png";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
    <meta name="description" content="@ViewData["Description"]">

    

    <meta property="og:title" content="@ViewData["SocialTitle"]">
    <meta property="og:url" content="@ViewData["BaseURL"]@ViewData["SocialPath"]">
    <meta property="og:description" content="@ViewData["SocialDescription"]">
    <meta property="og:type" content="website">
    <meta property="og:image" content="@smallLogoUrl">

    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="@ViewData["SocialTitle"]">
    <meta name="twitter:url" content="@ViewData["BaseURL"]@ViewData["SocialPath"]">
    <meta name="twitter:description" content="@ViewData["SocialDescription"]">
    <meta name="twitter:site" content="@@YorubaNames">
    <meta name="twitter:creator" content="@@YorubaNames">
    <meta name="twitter:image" content="@smallLogoUrl">

    <link href="~/img/favicon.png" rel="shortcut icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/multiple-select.css" rel="stylesheet">
    <link href="//fast.fonts.net/cssapi/6dc70f84-e724-4068-9f7a-797b1bf01ddb.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">

    <title>@ViewData["Title"] - @LanguageService.SocialName</title>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script src="~/js/jquery-2.1.3.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/js/jquery-ui.min.js" defer></script>
    <script src="~/js/multiple-select.js" defer></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.bundle.min.js" defer></script>

    <script src="~/js/scripts.js" defer></script>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=589413414564954";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9086385957783523"
            crossorigin="anonymous"></script>
</head>
<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.12&appId=539763726423959&autoLogAppEvents=1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        

    <!-- Header -->
    <div class="sticky-wrapper">
        
        <div class="universal-nav">
            <div class="container">
                <a href="https://www.yorubaname.com" class="current-site">YorubaName.com</a>
                <a href="https://www.igbonames.com" target="_blank">IgboNames.com</a>
                <a href="https://ttsyoruba.com" target="_blank">TTSYoruba.com</a>
                <a href="https://yorubaword.com" target="_blank">Yorubaword.com</a>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="@logoUrl" alt="@LanguageService.Website" title="@LanguageService.Website" onerror="this.src='https://placehold.co/200x50?text=YorubaName';">
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                    <i class="bi bi-list" style="font-size: 2rem; color: var(--brand-gold);"></i>
                </button>

                <div class="offcanvas offcanvas-end" id="mobileMenu">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title fw-bold" style="color:var(--brand-gold)">MENU</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div class="d-flex align-items-center mb-4 mb-lg-0 me-auto">
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="?lang=en" class="btn btn-outline-secondary active fw-bold">EN</a>
                                @if (LanguageService.IsYoruba)
                                {
                                    <a href="?lang=yo" class="btn btn-outline-secondary fw-bold">YOR</a>
                                }
                            </div>
                        </div>
                        <ul class="navbar-nav align-items-lg-center justify-content-end flex-grow-1">
                            <li class="nav-item"><a class="nav-link active" href="/">@Localizer["home"]</a></li>
                            <li class="nav-item"><a class="nav-link" href="/about-us">@Localizer["about"]</a></li>
                            <li class="nav-item"><a class="nav-link" href="/volunteer">@Localizer["volunteer"]</a></li>
                            <li class="nav-item"><a class="nav-link" href="http://blog.yorubaname.com" target="_blank">Blog</a></li>
                            <li class="nav-item"><a class="nav-link" href="/contact-us">@Localizer["contact"]</a></li>
                            <li class="nav-item mt-3 mt-lg-0 ms-lg-3">
                                <a class="btn btn-donate shadow-sm" href="https://www.indiegogo.com" target="_blank">@Localizer["donate"]</a>
                            </li>
                        </ul>
                    </div>
                </div> 
            </div>
        </nav>
    </div>
    <!-- /header -->
    @RenderBody()

    <section class="py-5 bg-white border-top">
        <div class="container">
            <div class="row g-4 justify-content-center align-items-stretch">
                
                <div class="col-lg-4">
                    <div class="solid-card">
                        <i class="bi bi-mailbox feature-icon"></i>
                        <h5 class="feature-card-title">Stay Updated</h5>
                        <p class="feature-desc">Get exclusive news, freebies, and lexicographer updates delivered to your inbox.</p>
                        <form action="//YorubaName.us10.list-manage.com/subscribe/post..." method="post" target="_blank" class="w-100 mt-auto">
                            <input type="email" name="EMAIL" placeholder="Your email address" class="form-control newsletter-input mb-3 text-center" required>
                            <button class="btn btn-dark w-100 fw-bold" type="submit">SUBSCRIBE</button>
                        </form>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="solid-card keyboard-card">
                        <i class="bi bi-keyboard feature-icon"></i>
                        <h4 class="feature-card-title">Yorùbá Keyboard</h4>
                        <p class="feature-desc">
                            Write properly in Yorùbá with appropriate tone marks using our custom software for Mac & Windows.
                        </p>
                        
                        <div class="mt-auto">
                            <a class="btn btn-cta-gold" href="/keyboard">
                                Get the Software <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="solid-card">
                        <i class="bi bi-people feature-icon"></i>
                        <h5 class="feature-card-title">Join the Community</h5>
                        <p class="feature-desc">Follow us on social media or volunteer to help us preserve the language.</p>
                        
                        <div class="mt-auto w-100">
                            <div class="d-grid gap-2">
                                <a href="https://www.facebook.com/YorubaNames" class="btn btn-outline-primary fw-bold" target="_blank">
                                    <i class="bi bi-facebook me-2"></i> Facebook
                                </a>
                                <a href="/volunteer" class="btn btn-outline-dark fw-bold">
                                    <i class="bi bi-person-raised-hand me-2"></i> Volunteer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <footer class="text-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-md-start mb-3 mb-md-0">
                    &copy; @DateTime.Now.Year @LanguageService.Website
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <a href="https://facebook.com/YorubaNames" class="mx-2 text-muted" target="_blank"><i class="bi bi-facebook fs-5"></i></a>
                    <a href="https://twitter.com/YorubaNames" class="mx-2 text-muted" target="_blank"><i class="bi bi-twitter-x fs-5"></i></a>
                    <a href="#" class="mx-2 text-muted"><i class="bi bi-instagram fs-5"></i></a>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/contact-us" class="fw-bold">@Localizer["contact"]</a> 
                    <span class="mx-2 text-muted">|</span> 
                    <a href="/terms" class="fw-bold">Terms</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- /body -->

    <script>
        if (window.location.hostname !== 'localhost') {
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-72815210-1', 'auto');
            ga('send', 'pageview');
        }
    </script>
</body>
</html>